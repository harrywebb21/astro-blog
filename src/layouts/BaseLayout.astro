---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

const { pageTitle } = Astro.props;
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
  </head>
  <body class="flex flex-col text-2xl overflow-hidden">
    <Header/>
    <div class="header-container bg-black w-fit rounded-lg mt-5 ml-7 overflow-hidden">
    <h1 class="title-1 text-white mx-10 mt-4 text-6xl font-extrabold leading-10">{pageTitle}</h1>
    </div>
    <h1 class="title-2 text-black ml-12 text-6xl font-extrabold leading-10">{pageTitle}</h1>
    <div class=" p-5 mt-5 m-auto">
      
    
    <slot/>
    
    <Footer />
    </div>
    <script>
      import "../scripts/menu.js";
    </script>
  </body>
</html>